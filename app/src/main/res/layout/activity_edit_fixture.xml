<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddFixtureActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title=""
        android:elevation="1dp" >

        <ImageButton
            android:id="@+id/backPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Fixture"
            android:fontFamily="@font/motion"
            android:textSize="33sp"
            android:textColor="@color/black"
            android:layout_marginStart="35dp"/>

    </com.google.android.material.appbar.MaterialToolbar>

        <EditText
            android:id="@+id/edit_sponsor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@drawable/stroke_shape"
            android:hint="Sponsor name"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="7dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/stroke_shape"
            android:hint="Sat 19 Aug"/>

        <EditText
            android:id="@+id/edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:textColor="@color/black"
            android:background="@drawable/stroke_shape"
            android:hint="04:30 PM"/>

        <EditText
            android:id="@+id/edit_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/stroke_shape"
            android:hint="Maingidza Stadium"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_team_a_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:background="@drawable/stroke_shape"
        android:hint="Team A name"/>

    <EditText
        android:id="@+id/edit_team_b_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/stroke_shape"
        android:hint="Team B name"/>



    <Button
        android:id="@+id/btnEditFixture"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save"
        style="@style/Theme.AppCompat"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:paddingStart="29dp"
        android:paddingEnd="29dp"
        android:textColor="@color/white"
        android:background="@drawable/round_button" />

</LinearLayout>